<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/weibologo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weibotitle"
        android:background="@drawable/sinaweibosel"
        android:layout_centerHorizontal="true" />
    
    <TextView
        android:id="@+id/weibotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_above="@+id/twitterlogo"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="20sp" 
        android:textColor="#fff1f1f1"/>

    <Button
        android:id="@+id/twitterlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_above="@+id/twittertitle"
        android:layout_alignLeft="@+id/weibologo"
        android:background="@drawable/twittersel" />
    
    <TextView
        android:id="@+id/twittertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weibotitle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:paddingTop="12dp"
        android:textSize="20sp"
        android:textColor="#fff1f1f1" />

    <Button
        android:id="@+id/about"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonsel"
        android:textColor="#ffe1e1e1"
        android:textSize="20sp"
        android:text="关于" />

    <TextView
        android:id="@+id/authtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weibologo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="授权:"
        android:textColor="#ffcccccc"
        android:textSize="30sp" />

</RelativeLayout>
